{
  "agent": {
    "name": "self-host",
    "version": "1"
  },
  "repo": {
    "default_branch": "main"
  },
  "scope": {
    "allowlist": ["src/commands/**", "src/store/**", "src/context/**", "docs/**", "tests/**"],
    "denylist": ["src/supervisor/**", "src/workers/**", "src/config/**", "src/repo/**", "src/cli.ts"],
    "lockfiles": []
  },
  "verification": {
    "tier0": ["pnpm build"],
    "tier1": ["pnpm test"],
    "tier2": [],
    "risk_triggers": [],
    "max_verify_time_per_milestone": 120
  },
  "workers": {
    "codex": {
      "bin": "codex",
      "args": ["exec", "--full-auto", "--json"],
      "output": "jsonl"
    },
    "claude": {
      "bin": "claude",
      "args": ["-p", "--output-format", "json", "--dangerously-skip-permissions"],
      "output": "json"
    }
  },
  "phases": {
    "plan": "claude",
    "implement": "claude",
    "review": "claude"
  }
}
