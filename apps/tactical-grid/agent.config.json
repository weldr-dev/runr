{
  "agent": {
    "name": "tactical-grid-fixture",
    "version": "1"
  },
  "repo": {
    "default_branch": "main"
  },
  "scope": {
    "allowlist": [
      "apps/tactical-grid/**"
    ],
    "denylist": ["**/node_modules/**"],
    "lockfiles": ["package-lock.json", "pnpm-lock.yaml", "yarn.lock"]
  },
  "verification": {
    "tier0": ["cd apps/tactical-grid && npm install", "cd apps/tactical-grid && npm run lint", "cd apps/tactical-grid && npm run typecheck", "cd apps/tactical-grid && npm run test"],
    "tier1": [],
    "tier2": [],
    "risk_triggers": [
      {
        "name": "deps",
        "patterns": ["apps/tactical-grid/package.json"],
        "tier": "tier1"
      },
      {
        "name": "engine",
        "patterns": ["apps/tactical-grid/src/engine/**"],
        "tier": "tier1"
      }
    ],
    "max_verify_time_per_milestone": 600
  },
  "workers": {
    "codex": {
      "bin": "codex",
      "args": ["exec", "--full-auto", "--json"],
      "output": "jsonl"
    },
    "claude": {
      "bin": "claude",
      "args": ["-p", "--output-format", "json", "--dangerously-skip-permissions"],
      "output": "json"
    }
  }
}
